#!/usr/bin/make -f

export DH_OPTIONS

configure:

build: build-arch build-indep

build-arch:
	$(MAKE) all doc/nonogram.1

build-indep: ;

clean:
	dh_testdir
	dh_testroot
	-$(MAKE) clean
	dh_clean 

install: install-indep install-arch
install-indep:
	dh_testdir
	dh_testroot
	dh_clean -k -i 
	dh_install -i data/* usr/share/nonogram/

install-arch:
	dh_testdir
	dh_testroot
	dh_clean -k -s 
	dh_install -s nonogram usr/bin/
	dh_installman doc/nonogram.1

binary-common:
	dh_testdir
	dh_testroot
	dh_installchangelogs 
	dh_installdocs
	dh_link
	dh_strip
	dh_compress 
	dh_fixperms
	dh_makeshlibs
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary-indep: build-indep install-indep
	$(MAKE) -f debian/rules DH_OPTIONS=-i binary-common

binary-arch: build-arch install-arch
	$(MAKE) -f debian/rules DH_OPTIONS=-s binary-common

binary: binary-arch binary-indep
.PHONY: build clean binary-indep binary-arch binary install install-indep install-arch configure
