<refsynopsisdiv>
    <cmdsynopsis>
        <command>&p;</command>
        <group choice='opt'>
            <arg choice='plain'><option>--colors</option></arg>
            <arg choice='plain'><option>-c</option></arg>
        </group>
    </cmdsynopsis>
    <cmdsynopsis>
        <command>&p;</command>
        <group choice='opt'>
            <arg choice='plain'><option>--utf-8</option></arg>
            <arg choice='plain'><option>-u</option></arg>
        </group>
    </cmdsynopsis>
    <cmdsynopsis>
        <command>&p;</command>
        <group choice='plain'>
            <group choice='opt'>
                <arg choice='plain'><option>--html</option></arg>
                <arg choice='plain'><option>-H</option></arg>
            </group>
            <group choice='opt'>
                <arg choice='plain'><option>--xhtml</option></arg>
                <arg choice='plain'><option>-X</option></arg>
            </group>
        </group>
    </cmdsynopsis>
    <cmdsynopsis>
        <command>&p;</command>
        <group choice='req'>
